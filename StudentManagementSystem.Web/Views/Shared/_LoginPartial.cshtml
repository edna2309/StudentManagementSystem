@using Microsoft.AspNetCore.Identity
@using StudentManagementSystem.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav justify-content-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center mx-2">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link text-body font-weight-bold px-0">
                <span class="d-sm-inline d-none">Hello @User.Identity?.Name!</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center mx-2">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn d-sm-inline d-none">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item d-flex align-items-center mx-2">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-body font-weight-bold px-0">
                <span class="d-sm-inline d-none">Sign In</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center mx-2">
            <a asp-area="Identity" asp-page="/Account/Register"  class="nav-link text-body font-weight-bold px-0">
                <span class="d-sm-inline d-none">Request an account</span>
            </a>
        </li>
    }
</ul>
